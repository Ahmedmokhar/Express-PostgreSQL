{
    "name": "express-postgresql",
    "version": "1.0.0",
    "description": "Learn how to use PostgreSQL with Node JS using express server.",
    "main": "build/app.js",
    "scripts": {
        "prestart": "npm run build",
        "start": "node build/app.js",
        "dev": "nodemon src/app.ts --watch",
        "lint": "eslint --ext .ts src",
        "build": "npx tsc",
        "db:up": "db-migrate up",
        "db:down": "db-migrate reset",
        "prettier": "npx prettier --write ./src/**/*.ts",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "express",
        "typescript",
        "postgres",
        "sql",
        "databases",
        "node"
    ],
    "author": "Mahmoud Kassem",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^14.3.2",
        "express": "^4.17.2",
        "pg": "^8.7.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/pg": "^8.6.4",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.8.0",
        "nodemon": "^2.0.15",
        "prettier": "2.5.1",
        "typescript": "^4.5.5"
    }
}